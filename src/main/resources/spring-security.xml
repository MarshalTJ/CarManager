<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	   		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
			http://www.springframework.org/schema/security 
			http://www.springframework.org/schema/security/spring-security-3.0.xsd">
	
	<!--  Spring-Security 的配置 -->
	<security:http auto-config="true" use-expressions="true" access-denied-page="/authority/denied" >
		
		<security:intercept-url pattern="/authority/login" access="permitAll"/>
		<security:intercept-url pattern="/user/admin" access="hasRole('ROLE_ADMIN')"/>
		<security:intercept-url pattern="/user/common" access="hasRole('ROLE_USER')"/>
		
		<security:form-login
				login-page="/authority/login" 
				authentication-failure-url="/authority/login?error=true" 
				default-target-url="/user/common"/>
			
		<security:logout 
				invalidate-session="true" 
				logout-success-url="/authority/login" 
				logout-url="/authority/logout"/>
	
	</security:http>
	
</beans>

